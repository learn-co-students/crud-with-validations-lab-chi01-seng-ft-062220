<h1>New Song</h1>
<%= form_for @song do |f| %>
    <% if @song.errors.any? %>
        <div id="error_explanations">
        <h2><%= pluralize(@song.errors.count, "error") %> need to be corrected.</h2>
            <% @song.errors.full_messages.each do |msg| %>
                <%= msg %>
            <% end %>
        </div>
    <% end %>

    <br><%= f.label :title %>:
    <%= f.text_field :title %><br>

    <br><%= f.label :released %>:
    <%= f.check_box :released %><br>

    <br><%= f.label :release_year %>:
    <%= f.number_field :release_year %><br>

    <br><%= f.label :artist_name %>:
    <%= f.text_field :artist_name %><br>

    <br><%= f.label :genre %>:
    <%= f.text_field :genre %><br>

    <%= f.submit %>
<% end %><br>

<%= link_to "Home Page", songs_path, method: :get %><br>
